<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player 1: 20"
        android:id="@+id/player1"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView"

         />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnP1Plus"
        android:layout_below="@+id/player1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btnP1Minus"
        android:layout_alignTop="@+id/btnP1Plus"
        android:layout_toRightOf="@+id/btnP1Plus"
        android:layout_toEndOf="@+id/btnP1Plus" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+5"
        android:id="@+id/btnP1Plus5"
        android:layout_alignTop="@+id/btnP1Minus"
        android:layout_toRightOf="@+id/btnP1Minus"
        android:layout_toEndOf="@+id/btnP1Minus" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-5"
        android:id="@+id/btnP1Minus5"
        android:layout_alignTop="@+id/btnP1Plus5"
        android:layout_toRightOf="@+id/btnP1Plus5"
        android:layout_toEndOf="@+id/btnP1Plus5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/loserMessage"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player 2: 20"
        android:id="@+id/player2"
        android:layout_below="@+id/btnP1Plus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnP2Plus"
        android:layout_below="@+id/player2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btnP2Minus"
        android:layout_below="@+id/player2"
        android:layout_toRightOf="@+id/btnP2Plus"
        android:layout_toEndOf="@+id/btnP2Plus" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+5"
        android:id="@+id/btnP2Plus5"
        android:layout_alignTop="@+id/btnP2Minus"
        android:layout_toRightOf="@+id/btnP2Minus"
        android:layout_toEndOf="@+id/btnP2Minus" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-5"
        android:id="@+id/btnP2Minus5"
        android:layout_alignTop="@+id/btnP2Plus5"
        android:layout_toRightOf="@+id/btnP2Plus5"
        android:layout_toEndOf="@+id/btnP2Plus5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player 3: 20"
        android:id="@+id/player3"
        android:layout_below="@+id/btnP2Plus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnP3Plus"
        android:layout_below="@+id/player3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btnP3Minus"
        android:layout_below="@+id/player3"
        android:layout_toRightOf="@+id/btnP3Plus"
        android:layout_toEndOf="@+id/btnP3Plus" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+5"
        android:id="@+id/btnP3Plus5"
        android:layout_alignTop="@+id/btnP3Minus"
        android:layout_toRightOf="@+id/btnP3Minus"
        android:layout_toEndOf="@+id/btnP3Minus" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-5"
        android:id="@+id/btnP3Minus5"
        android:layout_alignBottom="@+id/btnP3Plus5"
        android:layout_toRightOf="@+id/btnP3Plus5"
        android:layout_toEndOf="@+id/btnP3Plus5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player 4: 20"
        android:id="@+id/player4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnP3Plus" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnP4Plus"
        android:layout_below="@+id/player4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btnP4Minus"
        android:layout_alignBottom="@+id/btnP4Plus"
        android:layout_toRightOf="@+id/btnP4Plus"
        android:layout_toEndOf="@+id/btnP4Plus" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+5"
        android:id="@+id/btnP4Plus5"
        android:layout_alignTop="@+id/btnP4Minus"
        android:layout_toRightOf="@+id/btnP4Minus"
        android:layout_toEndOf="@+id/btnP4Minus" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-5"
        android:id="@+id/btnP4Minus5"
        android:layout_alignTop="@+id/btnP4Plus5"
        android:layout_toRightOf="@+id/btnP4Plus5"
        android:layout_toEndOf="@+id/btnP4Plus5" />

</RelativeLayout>
